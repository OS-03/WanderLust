<style>
  .form-control.search-input:focus {
    box-shadow: none;
    outline: none;
  }
  .body {
    justify-content: center;
    align-items: center;
    display: flex;
    width: 40rem;
  }

  .search-container {
    border: 0.3px black solid;
    border-radius: 50px;
    padding: 0.3rem;
    max-width: 500px;
    width: 100%;
    transition: all 0.5s ease;
  }
  .search-container:hover {
    background: rgba(0, 0, 0, 0.28) !important;
    border: none;
  }
  .form-control.search-input {
    border: none;
    background: transparent;
    padding-left: 20px;
    font-size: 1rem;
  }

  .btn-search {
    color: white;
    border-radius: 50px;
    padding: 10px 20px;
    border: none;
    transition: all 0.3s ease;
  }

  .btn-search:hover {
    background-color: #fe424d !important;
    transform: scale(1.05);
  }

  .search-icon {
    position: absolute;
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
  }

  /* Media Queries for Responsiveness */
  @media (max-width: 768px) {
    .body {
      width: 100%;
    }

    .search-container {
      max-width: 100%;
    }

    .navbar-brand {
      font-size: 1.5rem;
    }

    .nav-link {
      font-size: 1rem;
    }

    .btn-search {
      padding: 8px 15px;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 576px) {
    .navbar-brand {
      font-size: 1.2rem;
    }

    .nav-link {
      font-size: 0.9rem;
    }

    .search-container {
      padding: 0.2rem;
    }

    .form-control.search-input {
      font-size: 0.9rem;
    }

    .btn-search {
      padding: 6px 10px;
      font-size: 0.8rem;
    }
  }
</style>
<div class="d-flex flex-row flex-wrap sticky-top">
