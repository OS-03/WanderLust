<%- layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation border p-3 rounded-4 shadow" novalidate>
      <h1 class="col-6 ">Login to WanderLust</h1>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="Enter Username"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Enter password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-dark add-btn">Login</button>
    </form>
  </div>
</div>
