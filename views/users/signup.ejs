<%- layout('/layouts/boilerplate') %>
<div class="row mt-3">

  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation border p-3 rounded-4 shadow mb-5" novalidate>
      <h1 class="col-8">SignUp to WanderLust</h1>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="Enter Username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Enter Email"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Enter password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-dark add-btn">Signup</button>
    </form>
  </div>
</div>
